<%-include('../includes/head.ejs')%>
<link rel="stylesheet" href="/css/main.css">  


<body>
<%-include('../includes/nav.ejs')%>

     <main class="main">
        <%if(prods.length>0){%>
        <!-- if prods.length>0 -->
            <div class="grid"> 
                <% for(let product of prods){ %>
                <!-- each product in prods -->
                <div class="card product-item">
                    <div class="card__header">
                            <h1 class="product__title"><%=product.title%></h1></div>
                          <div class="card__image"> 
                            <img class="image" src = "<%=product.imageUrl%>",
                             alt="<%=product.title%>">
                        </div>  
                         <div class="card__content "> 
                            <h2 class="product__price">N<%=product.price%></h2>
                            <p class="product__description"><%=product.description%>
                            </p>
                        </div>  
                        <div class="card__actions">
                            <a href="/products/<%=product.id%>" class="btn">Details</a>
                            <%- include('../includes/add-to-cart.ejs',  {product:product})%>
                        </div> 
                        </div>   </div>
                        <%}%>
                        <%} else{%>
           <div class="product__description" style="text-align: left;width: 500px; font-size: 20px;" > NO PRODUCTS AVAILABLE</div> 
           <%}%>
           <%-include('../includes/end.ejs')%>
