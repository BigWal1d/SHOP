<%- include('../includes/head.ejs')%> 
<link rel="stylesheet" href="/css/add-prod.css">
<link rel="stylesheet" href="/css/main.css"> 

<body>
    <%- include('../includes/nav.ejs')%>

    <main class="main_for_add">
        <form action="<%if (editing){ %>edit-product<%} else{ %>add-product<%}%>" method="POST" class="form">
            <div class="form-control">
               <span class="head"><%if (editing){ %> EDIT THIS  PRODUCT<%} else{ %>ADD A PRODUCT<%}%></span>
            </div>
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" class="textbox" value="<%if (editing){ %><%=product.title%><%}%>">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" class="textbox" value="<%if (editing){ %><%=product.imageUrl%><%}%>">
            </div>
            <div class="form-control">
                <label for="Price">Price</label>
                <input type="number" name="price" class="textbox" step="0.01" value="<%if (editing){ %><%=product.price%><%}%>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
              <textarea name="description" class="description textbox"  rows="5"><%if (editing){ %><%=product.description%><%}%></textarea>
            </div>
           <button type="submit" class="button"><%if (editing){ %> Update Product<%} else{ %>Add Product<%}%></button>
        </form>

        <%- include('../includes/end.ejs')%>